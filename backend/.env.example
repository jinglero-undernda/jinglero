#############################################
# Backend environment variables (example)
# Copy to: backend/.env  (DO NOT COMMIT .env)
#############################################

# --- Neo4j core connection ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# Backend listen port (nginx proxies to this)
PORT=3000

# --- New Aura Management API variables ---
# Option 1: Use OAuth 2.0 Client Credentials (recommended)
NEO4J_AURA_CLIENT_NAME=change_me
NEO4J_AURA_CLIENT_ID=change_me
NEO4J_AURA_CLIENT_SECRET=change_me

# Option 2: Use direct API Token (if you have a token)
# NEO4J_AURA_API_TOKEN=change_me

# Option 3: Use Username/Password (alternative)
# NEO4J_AURA_API_USERNAME=change_me
# NEO4J_AURA_API_PASSWORD=change_me

NEO4J_AURA_INSTANCE_ID=change_me

# Optional: Customize retry behavior
NEO4J_AUTO_RESUME_ENABLED=true
NEO4J_RESUME_RETRY_MAX=3
NEO4J_RESUME_INITIAL_DELAY=15000
NEO4J_RESUME_COOLDOWN=60000

# --- Admin authentication ---
ADMIN_PASSWORD=change_me

# REQUIRED in production (must be different from ADMIN_PASSWORD)
JWT_SECRET=change_me

# Optional JWT claims validation
# JWT_ISSUER=jinglero
# JWT_AUDIENCE=jinglero-web

# Default token expiry (shorter is safer)
ADMIN_JWT_EXPIRES_IN=12h

# --- Runtime / security hardening ---
NODE_ENV=development
BIND_ADDRESS=127.0.0.1
TRUST_PROXY=1

# Production CORS allowlist (comma-separated)
# Example: CORS_ORIGINS=https://jingle.ar,https://www.jingle.ar,https://jinglero.duckdns.org
CORS_ORIGINS=

# Request size limits
JSON_BODY_LIMIT=200kb
URLENCODED_BODY_LIMIT=200kb

# Rate limiting
SECURITY_ENABLE_RATE_LIMIT=true
SECURITY_RATE_LIMIT_WINDOW_MS=60000
SECURITY_RATE_LIMIT_MAX=600
ADMIN_RATE_LIMIT_WINDOW_MS=60000
ADMIN_RATE_LIMIT_MAX=240
ADMIN_LOGIN_RATE_LIMIT_WINDOW_MS=60000
ADMIN_LOGIN_RATE_LIMIT_MAX=10