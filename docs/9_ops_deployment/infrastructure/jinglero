server {
       server_name jinglero.duckdns.org jingle.ar www.jingle.ar;

       # Serve frontend static files
       root /var/www/jinglero/frontend/dist;
       index index.html;

       # Basic hardening headers (frontend is served by nginx, so helmet on backend won't cover this)
       add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
       add_header X-Content-Type-Options "nosniff" always;
       add_header Referrer-Policy "strict-origin-when-cross-origin" always;
       add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

       # Cache static assets aggressively (Vite build outputs are content-hashed)
       location ~* \.(?:css|js|mjs|map|png|jpg|jpeg|gif|webp|svg|ico|woff2?)$ {
           expires 30d;
           add_header Cache-Control "public, max-age=2592000, immutable";
           try_files $uri =404;
       }

       # Do not cache SPA entrypoint
       location = /index.html {
           add_header Cache-Control "no-store";
           try_files $uri =404;
       }

       # Frontend routes (SPA routing)
       location / {
           try_files $uri $uri/ /index.html;
       }

       # Block common scanner/framework probe paths (noise reduction)
       location ~* ^/(wp-admin|wp-login\.php|xmlrpc\.php|phpmyadmin|pma|\.git|\.env|vendor|composer\.(json|lock)|package\.json|yarn\.lock) {
            return 404;
       }

       # Admin UI should only be reachable from LAN/VPN (same network as server)
       # Mesh WiFi note: allow both subnets you listed for fail2ban.
       location ^~ /admin {
           allow 127.0.0.1;
           allow ::1;
           allow 192.168.1.0/24;
           allow 192.168.68.0/24;
           deny all;

           try_files $uri $uri/ /index.html;
       }

       # Admin API should only be reachable from LAN/VPN (same network as server)
       location ^~ /api/admin/ {
           allow 127.0.0.1;
           allow ::1;
           allow 192.168.1.0/24;
           allow 192.168.68.0/24;
           deny all;

           proxy_pass http://localhost:3000;
           proxy_http_version 1.1;
           proxy_set_header Host $host;
           proxy_set_header X-Real-IP $remote_addr;
           proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
           proxy_set_header X-Forwarded-Proto $scheme;
       }

       # Add this inside EACH server block
       # IMPORTANT: do not block Let's Encrypt renewals (.well-known starts with a dot)
       location ~ /\.(?!well-known) {
            deny all;
            access_log off;
            log_not_found off;
            return 404; # Makes it look like the file doesn't exist at all
       }

       # Health check endpoint - map to root /health
       location = /api/health {
           proxy_pass http://localhost:3000/health;
           proxy_http_version 1.1;
           proxy_set_header Host $host;
           proxy_set_header X-Real-IP $remote_addr;
           proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
           proxy_set_header X-Forwarded-Proto $scheme;
       }

       # Proxy API requests to backend
       location /api {
           proxy_pass http://localhost:3000;
           proxy_http_version 1.1;
           proxy_set_header Upgrade $http_upgrade;
           proxy_set_header Connection 'upgrade';
           proxy_set_header Host $host;
           proxy_set_header X-Real-IP $remote_addr;
           proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
           proxy_set_header X-Forwarded-Proto $scheme;
           proxy_cache_bypass $http_upgrade;
       }

   
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/jinglero.duckdns.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/jinglero.duckdns.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = www.jingle.ar) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = jingle.ar) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = jinglero.duckdns.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name jinglero.duckdns.org jingle.ar www.jingle.ar;
    location / {
       return 301 https://$host$request_uri;
    }

    # Add this inside EACH server block
    # IMPORTANT: do not block Let's Encrypt renewals (.well-known starts with a dot)
    location ~ /\.(?!well-known) {
        deny all;
        access_log off;
        log_not_found off;
        return 404; # Makes it look like the file doesn't exist at all
    }

}
